<h2>メニュー一覧</h2>
<%= link_to "新規投稿", new_menu_path %>
<% @menus.each do |menus| %>
<table>
    <thead>
        <th></th>
        <th>メニュー名</th>
        <th>メニュー説明</th>
    </thead>
    <tbody>
        <td>
         <%= link_to admin_menu_path(menus) do %>
            <% if menus.image.attached? %>
             <%= image_tag menus.image, size: "150x150" %>
            <% else %>
             <%= image_tag 'no-image', size: "150x150" %>
            <% end %>
         <% end %>
        </td>
        <td><%= menus.name %></td>
        <td><%= menus.explanation %></td>
    </tbody>

</table>
<% end %>