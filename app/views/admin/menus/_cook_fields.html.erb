<div class="nested-fields">
  <div class="row mx-auto">
    <div class="col-1"><%= f.text_field :cooks_count, class: "form-control", placeholder: "順番" %></div>
    <div class="col-1"><%= f.file_field :cook_image, class: "form-control hidden image_upload", placeholder: "画像" %></div>
    <div class="offset-1 col-5"><%= f.text_field :text, class: "form-control", placeholder: "作り方" %></div>
    <div class="offset-1 col-1 px-0 w-auto">
      <%= link_to_remove_association "削除", f, class: "btn btn-secondary btn-block" %>
    </div>
  </div>
</div>