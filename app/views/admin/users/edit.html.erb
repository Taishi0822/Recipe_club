<h2>会員編集画面</h2>
　<%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
 <tr>
   <th>ニックネーム</th>
   <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></td>
 </tr>
 <tr>
   <th>メールアドレス</th>
   <td><%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%></td>
 </tr>
 <% if @user.profile_image.attached? %>
     <%= image_tag @user.profile_image, size: "150x150", class: "profile_image" %>
 <% else %>
     <%= image_tag 'no-image', size: "150x150", class: "profile_image" %>
 <% end %>
 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

 <%= f.submit "変更を保存" %>
<% end %>

<%= link_to '退会する', admin_unsubscribe_path(@user) %>