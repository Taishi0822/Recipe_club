<h2>いいね一覧</h2>

<% @favorites_menu.each do |favorites| %>
<table>
    <thead>
        <th></th>
        <th>メニュー名</th>
        <th>メニュー説明</th>
    </thead>
    <tbody>
        <td>
         <%= link_to admin_menu_path(favorites) do %>
            <% if favorites.image.attached? %>
             <%= image_tag favorites.image, size: "150x150" %>
            <% else %>
             <%= image_tag 'no-image', size: "150x150" %>
            <% end %>
         <% end %>
        </td>
        <td><%= favorites.name %></td>
        <td><%= favorites.explanation %></td>
    </tbody>
</table>
<% end %>