<h2>会員詳細</h2>

<table>
  <tr>
    <% if @user.profile_image.attached? %>
     <%= image_tag @user.profile_image, size: "150x150" %>
    <% else%>
     <%= image_tag 'no-image', size: "150x150" %>
    <% end %>
  </tr>

  <tr>
    <th>ニックネーム</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
</table>
<%= link_to 'いいね一覧', favorites_admin_user_path %>
<%= link_to '作った一覧', checks_admin_user_path %>
<%= link_to '編集', edit_admin_user_path(@user) %>
<% @user.menus.each do |menu| %>
<table>
  <td>
    <%= link_to menu_path(menu) do %>
      <% if menu.image.attached? %>
       <%= image_tag menu.image, size: "150x150" %>
      <% else %>
       <%= image_tag 'no-image', size: "150x150" %>
      <% end %>
    <% end %>
  </td>
  <td><%= menu.name %></td>
</table>
<% end %>