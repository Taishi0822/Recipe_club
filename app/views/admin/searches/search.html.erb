<h2>検索結果</h2>

<table class="table table-hover table-inverse">
    <!--検索対象モデルがGenreではない時(= 検索対象モデルがMenuの時) -->
    <tbody>
      <% @menus.each do |menu| %>
        <tr>
          <td>
             <%= link_to admin_menu_path(menu) do %>
                <% if menu.image.attached? %>
                 <%= image_tag menu.image, size: "150x150" %>
                <% else %>
                 <%= image_tag 'no-image', size: "150x150" %>
                <% end %>
             <% end %>
          </td>
          <td><%= menu.name %></td>
          <td><%= menu.explanation %></td>
        </tr>
      <% end %>
    </tbody>
</table>