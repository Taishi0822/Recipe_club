<h2>マイページ</h2>

<table>
  <tr>
    <% if @user.profile_image.attached? %>
     <%= image_tag @user.profile_image, size: "150x150" %>
    <% else %>
     <%= image_tag 'no-image', size: "150x150" %>
    <% end %>
  </tr>

  <tr>
    <th>ニックネーム</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
</table>
<% if current_user.id == @user.id %>
  <%= link_to '編集', edit_user_path(current_user.id) %>
<% end %>
<% @user.menus.each do |menu| %>
<table>
  <td>
    <% if menu.image.attached? %>
     <%= image_tag menu.image, size: "150x150" %>
    <% else %>
     <%= image_tag 'no-image', size: "150x150" %>
    <% end %>
  </td>
  <td><%= menu.name %></td>
</table>
<% end %>

