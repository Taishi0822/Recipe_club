<% if current_user.id == @user.id %>
 <h2  class="main-title">プロフィール編集</h2>
 <div class="edit-user">
  <%= form_with model: @user do |f| %>
  <table class="table-box">
   <tr>
    <th class="text-box">
     <% if @user.profile_image.attached? %>
       <%= image_tag @user.profile_image, size: "150x150", class: "profile_image" %>
     <% else %>
       <%= image_tag 'no-image', size: "150x150", class: "profile_image" %>
     <% end %>
    </th>
    <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
   </tr>
   <tr>
    <th class="text-box"><%= f.label :ニックネーム, class: 'text-title' %></th>
    <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ニックネーム"%></td>
   </tr>
   <tr>
    <th class="text-box"><%= f.label :メールアドレス, class: 'text_title' %></th>
    <td><%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%></td>
   </tr>
  </table>
  <%= f.submit "変更を保存", class: 'user-submit btn btn-warning' %>
  <% end %>
  <%= link_to '退会する', unsubscribe_path(current_user.id) %>
 </div>
<% end %>