<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
 <tr>
   <th>ニックネーム</th>
   <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></td>
 </tr>
 <tr>
   <th>メールアドレス</th>
   <td><%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%></td>
 </tr>
 <% if @user.profile_image.attached? %>
     <%= image_tag @user.profile_image, size: "150x150" %>
 <% else %>
     <%= image_tag 'no-image', size: "150x150" %>
 <% end %>
 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

 <%= f.submit "変更を保存" %>
<% end %>

<%= link_to '退会する', unsubscribe_path(current_user.id) %>