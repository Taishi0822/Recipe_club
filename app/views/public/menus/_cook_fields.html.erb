<div class="nested-fields">
  <div class="row mx-auto">
    <div class="cook-top">
      <div class="col-6"><%= f.text_field :cooks_count, class: "form-control", placeholder: "順番(半角数字)" %></div>
      <div class="col-3">
          <%= f.file_field :cook_image, placeholder: "メニュー画像", accept: "image/*" %>
      </div>
    </div>
    <div class="offset-1 col-6"><%= f.text_area :text, class: "form-control", placeholder: "作り方" %></div>
    <div class="offset-1 col-1 px-0 w-auto">
      <%= link_to_remove_association "削除", f, class: "btn btn-secondary btn-block" %>
    </div>
  </div>
</div>