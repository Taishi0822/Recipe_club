<% if menu.checked_by?(current_user) %>
    <p>
      <%= link_to menu_checks_path(menu), method: :delete, remote: true do %>
        ♥<%= menu.checks.count %> 作った
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to menu_checks_path(menu), method: :post, remote: true do %>
        ♡<%= menu.checks.count %> 作った
      <% end %>
    </p>
<% end %>