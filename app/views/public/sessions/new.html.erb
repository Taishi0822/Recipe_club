<%= flash[:notice] %>
<h2 class="main-title">ログイン</h2>

<div class="sign">
    <%= form_with model: @user, url: user_session_path do |f| %>
  <table class="table-box">
    <tr>
      <th class="text-box"><%= f.label :メールアドレス, class: 'text-title' %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign' %></td>
    </tr>
    <tr>
      <th class="text-box"><%= f.label :パスワード, class: 'text-title' %></th>
      <td><%= f.password_field :password, autocomplete: "current-password", class: 'sign' %></td>
    </tr>
  </table>
  <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me %>
    <%= f.label :自動ログインしますか？ %>
  <% end %>
    <div class="actions">
      <%= f.submit "ログイン", class: 'user-submit btn btn-warning' %>
    </div>
  <% end %>
  <%= render "public/shared/links" %>
</div>


